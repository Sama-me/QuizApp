<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QuizApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#44ba99</item>
        <item name="colorPrimaryVariant">#15a980</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="QuestionNumber">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottomLeft</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

    <style name="Linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/margin</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/back_2</item>
    </style>

    <style name="QuestionHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginRight">@dimen/margin_bottomRight</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottomLeft</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/padding</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CheckBox_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/paddingLeft</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottomRight</item>
        <item name="android:layout_marginRight">@dimen/margin_leftRight</item>
        <item name="android:layout_marginLeft">@dimen/margin_bottomLeft</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="RadioButton_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottomRight</item>
        <item name="android:paddingLeft">@dimen/paddingLeft</item>
        <item name="android:layout_marginRight">@dimen/margin_leftRight</item>
        <item name="android:layout_marginLeft">@dimen/margin_bottomLeft</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="Edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottomRight</item>
        <item name="android:layout_marginRight">@dimen/margin_bottomRight</item>
        <item name="android:layout_marginLeft">@dimen/margin_leftRight</item>
        <item name="android:hint">@string/write_answer</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="RightAnswer_TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottomRight</item>
        <item name="android:layout_marginRight">@dimen/margin_bottomRight</item>
        <item name="android:layout_marginLeft">@dimen/margin_leftRight</item>
        <item name="android:visibility">gone</item>
        <item name="android:textColor">@color/colorCorrectAnswer</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>